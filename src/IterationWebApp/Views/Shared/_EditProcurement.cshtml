@model EditProcurementViewModel
@{
    ViewBag.Title = "Iteration AB - Procurement Edit";
}

<form asp-controller="Procurements" asp-action="Edit" class="form-horizontal" asp-antiforgery="true">
    <input type="hidden" asp-for="Procurement_Id" />
    @*<input type="hidden" asp-for="ModifiedDate" />*@
    <input type="text" asp-for="PublishedDate" />
    <div class="modal-content">
        <div class="modal-header">

            <h2 class="modal-title" id="gridSystemModalLabel">Edit Procurement</h2>
        </div>
        <div class="modal-body">


            <div class="form-group">

                <label asp-for="Service_Procured" class="col-sm-4 control-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Service_Procured" class="form-control" />
                    <span asp-validation-for="Service_Procured" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Response_Evaluation" class="col-sm-4 control-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Response_Evaluation" class="form-control" />
                    <span asp-validation-for="Response_Evaluation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="col-sm-4 control-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">

                <label asp-for="CompanyID" class="col-sm-4 control-label"></label>
                <div class="col-sm-6">
                    <select asp-for="CompanyID" class="form-control" asp-items="Model.Companies"></select>

                    <span asp-validation-for="CompanyID" class="text-danger"></span>
                </div>
                @*<a class="btn btn-success" asp-controller="Companies" asp-action="Create">Add Company</a>*@
            </div>




        </div>

        <div class="modal-footer">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-success">Cancel</a>
                    <input type="submit" value="Save Changes" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div><!-- /.modal-content -->
</form>
