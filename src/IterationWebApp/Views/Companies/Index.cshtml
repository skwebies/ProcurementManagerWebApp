@model IEnumerable<Company>
@{
    ViewBag.Title = "Iteration AB - Companies";
} 
<div class="row">
    <div class="col-sm-2">
        <h2>Companies</h2>
        <a asp-controller="Companies" asp-action="Create" class="btn btn-success">Add Company</a>
    </div>
    @*<div class="col-sm-2 col-sm-offset-5">
        <a asp-controller="Companies" asp-action="Create" class="btn btn-primary">Add Company</a>
    </div>*@
</div>

<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Corporate Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Company_Name</td>
                <td>@item.Corporate_Number</td>
            </tr>

        }
    </tbody>
</table>
